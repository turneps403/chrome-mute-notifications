{
  "manifest_version": 3,
  "name": "Mute Notifications on 1 hour",
  "description": "Disable all desktop notifications with one click on 1 hour.",
  "version": "1.0.0",
  "icons": {
    "32": "images/logo-32.png",
    "64": "images/logo-64.png",
    "128": "images/logo-128.png"
  },
  "permissions": [
    "contentSettings",
    "alarms"
  ],
  "action": {
    "default_icon": {
      "16": "images/volume-16.png",
      "24": "images/volume-24.png",
      "32": "images/volume-32.png",
      "64": "images/volume-64.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
