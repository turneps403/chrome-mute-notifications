{
  "manifest_version": 3,
  "name": "Mute Notifications on 1 hour",
  "description": "Disable all desktop notifications with one click on 1 hour.",
  "version": "1.0.0",
  "icons": {
    "128": "images/logo-128.png",
    "48": "images/logo-48.png"
  },
  "permissions": [
    "contentSettings",
    "storage"
  ],
  "action": {
    "default_icon": {
      "19": "images/icon-on-19.png",
      "38": "images/icon-on-38.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
